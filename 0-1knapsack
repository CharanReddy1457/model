#include<stdio.h>
#define N 30
int profit[N];
int wight[N];
int max(int a, int b)
{
    if(a>=b)
    {
        return a;
    }
    else{
        return b;
    }
}
int knapsack(int W , int w[], int pt[] , int n)
{
    if(W==0 || n==0)
    {
        return 0;
    }
    if(w[n-1]>W)
    {
        return knapsack(W ,w , pt , n-1);
    }
    else
        return max(pt[n-1]+knapsack(W-w[n-1] , w, pt, n-1) ,knapsack(W ,w , pt , n-1));

}
int main()
{
  int n;
  printf("enter the number of objects :");
  scanf("%d" ,&n);
  int W;

    printf("enter the maximum weight  :");
  scanf("%d" ,&W);

  int profit[n];
  int weight[n];

  printf("enter the profit of the objects :");
  for(int i=0; i<n;i++)
  {
    scanf("%d" , &profit[i]);
  }


  printf("enter the weight of the objects :");
  for(int i=0; i<n;i++)
  {
    scanf("%d" , &weight[i]);
  }

  printf("the maximum profit is : %d" , knapsack(W ,weight , profit , n ));
  return 0;


}
